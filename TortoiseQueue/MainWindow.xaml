<Window x:Class="TortoiseQueue.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TortoiseQueue"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Background="WhiteSmoke"
        Title="Tortoise Queue" Height="500" Width="500">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="16">
            <Label Content="Queue:" />
            <ScrollViewer Background="White" Height="300">
                <ListBox Name="QueueListBox" />
            </ScrollViewer>
            <Button Name="loadButton" Content="Load Queue" Margin="8" Height="32" Click="loadButton_Click" />
            <Button Name="runButton" Content="Run Tortoise" Margin="8" Height="32" Click="runButton_Click" />
        </StackPanel>
    </Grid>
</Window>
